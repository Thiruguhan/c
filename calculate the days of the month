#include <stdio.h>
int main() {
    int month;
    int year; 
    printf("Enter the year: ");
    scanf("%d", &year);
    printf("Enter the month (1-12): ");
    scanf("%d", &month);
       if (month < 1 || month > 12) {
        printf("Invalid month\n");
        return 1;}
    if (month == 1 || month == 3 || month == 5 || month == 7 || month == 8 || month == 10 || month == 12) {
        printf(" 31 days\n", month, year);
        printf("valid month\n");                    
    } else if (month == 4 || month == 6 || month == 9 || month == 11) {
        printf(" 30 days\n", month, year);
        printf("valid month\n");
    } else if (month == 2) {
        if ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0)) {
            printf(" 29 days (leap year)\n", month, year);
        } else {
            printf(" 28 days(not a leap year)\n", month, year);
        }printf("valid month\n");
    }
    return 0;
}
